<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen centrada en la pantalla -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:src="@drawable/imagen" />

    <!-- Espacio para los botones en dos columnas -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:rowCount="2"
        android:layout_marginBottom="16dp">

        <!-- Botón para ver pistas -->
        <Button
            android:id="@+id/btnPistas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Ver Pistas" />

        <!-- Botón para ver reservas -->
        <Button
            android:id="@+id/btnReservas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Mis Reservas" />

        <!-- Botón para hacer una reserva -->
        <Button
            android:id="@+id/btnNuevaReserva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Hacer una Reserva" />

        <!-- Botón para cerrar sesión -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Cerrar Sesión" />

    </GridLayout>

    <!-- Título de reservas próximas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximas Reservas"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <!-- RecyclerView para mostrar el listado de reservas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservasListado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>
